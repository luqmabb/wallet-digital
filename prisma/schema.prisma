generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  name        String
  password    String
  balance     Decimal      @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  transaction Transaction[]
}

model Transaction {
  id     Int      @id @default(autoincrement())
  date   DateTime
  amount Decimal
  note   String

  user          Users    @relation(fields: [transactionId], references: [id])
  transactionId Int      
  categories    Category @default(Salary)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum Category {
  Salary
  Shopping
  Dinner
  danLainLain
}