<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <title>add income</title>
    <form action="/addOutcome/<%= id %>" method="post">
        <label for="amount">amount</label>
        <input type="number" name="amount" id="amount">
        <label for="note">note</label>
        <textarea id="" cols="30" rows="10" name="note" id="note"></textarea>
        <select id="category" name="category">
            
            <% for( let index = 0; index < category.length; index++ ) { %>
                <option value="<%= category[index].id %>"><%= category[index].nameCategory %></option>
            <% } %>

        </select>
        <button type="submit">submit</button>
    </form>
    
    <br><br>
    <p>Outcome CAtegory</p>

    <button>
        <a href="/addOutcomeCategory/<%= id %>">add outcome category</a>
    </button>
    <% if (messages.error && messages.error.length> 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= messages.error %>
        </div>
    <% } %>
    <% if (messages.success && messages.success.length> 0) { %>
        <div class="alert alert-success" role="alert">
            <%= messages.success %>
        </div>
    <% } %>
    
    <p>id = <%= id %></p>
    <ul>
        <% category.forEach(element => { %>
            <li><%= element.nameCategory%></li> 
            <a href="/deleteCategoryOutcome/<%= element.id %>/<%= id %>"><button>delete</button></a>
            <a href="/editCategoryOutcome/<%= element.id %>/<%= id %>"><button>edit</button></a>
        <% }) %>
    </ul>

    <script>
        
        const alertElement = document.querySelector('.alert');
        if (alertElement) {
            setTimeout(() => {
                alertElement.remove();
            }, 3000);
        }
        
    </script>
</body>
</html>