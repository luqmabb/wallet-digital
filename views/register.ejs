<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<style>
  .font1 {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: bold;
    color: rgb(70, 70, 70);
  }

  .font2 {
    font-family: Arial, Helvetica, sans-serif;
    color: #555555;
    font-size: 11px;
    font-weight: bold;
    letter-spacing: 1px;
  }

  .bordered {
    border: 1px solid black;
  }
</style>

<body>

  <div id="flash-messages">

    <% if (messages.error && messages.error.length> 0) { %>
      <div class="alert alert-danger" role="alert">
        <%= messages.error %>
      </div>
      <% } %>

  </div>

  <div class="container-fluid d-flex align-items-center" style="height: 100vh; background: #80BCBD;">

    <div class="container rounded-2 shadow-lg d-flex align-items-center"
      style="width: 350px; height: 500px; background-color: #DCF2F1;">
      <div class="container" style="width: 300px; height: 350px; margin-bottom: 80px;">
        <form action="/register" method="post">
          <p class="font1">Register</p>
          <div class="mt-3">
            <label for="email" class="form-label font2">EMAIL</label>
            <input type="email" class="form-control rounded-1" id="email" name="email" placeholder="name@example.com" required>
          </div>
          <div class="mt-3">
            <label for="name" class="form-label font2">NAME</label>
            <input type="text" class="form-control rounded-1" id="name" name="name" required>
          </div>
          <div class="mt-3">
            <label for="password" class="form-label font2">PASSWORD</label>
            <div class="input-group">
              <input type="password" class="form-control" id="password" name="password" required>
              <button type="button" id="togglePassword" class="btn btn-primary rounded-end">
                  ðŸ˜‘
              </button>
          </div>
            <button type="submit" class="btn btn-primary mt-3 rounded-1 w-100 border-bottom border mt-4">Sign
              Up</button>
          </div>
          <div class="d-flex justify-content-between mt-2">
            <div style="width: 125px;">
              <hr>
            </div>
            <p style="font-size: 13px; margin-top: 5px;">OR</p>
            <div style="width: 120px;">
              <hr>
            </div>
          </div>
          <p class="text-center fs-7 fw-lighter">already have an account? <a href="/login">Login</a> here</p>
        </form>
      </div>
    </div>
  </div>

  <script>
    const passwordInput = document.getElementById('password');
    const togglePassword = document.getElementById('togglePassword');

    togglePassword.addEventListener('click', function () {
      const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
      passwordInput.setAttribute('type', type);
      togglePassword.textContent = type === 'password' ? 'ðŸ˜‘' : 'ðŸ˜ƒ';
    });
  </script>
</body>

</html>
</body>

</html>